<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.sochajs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SOCHAjs</name>
    <description>
        Simple Organization for Cordova Hybrid Applications
    </description>
    <author email="guilhermecdp7@gmail.com" href="http://cordova.io">
        guicdp7
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="src/Assets/img/logo.png" />
        <preference name="SplashScreenBackgroundColor" value="#cacaca" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashScreenBackgroundColor" value="0xcacaca" />
    <preference name="BackgroundColor" value="0xcacaca" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="DisallowOverscroll" value="true"/> 
    <preference name="webviewbounce" value="false"/>
</widget>
